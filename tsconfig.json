{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "classic",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules/",
    "typings/"
  ],
  "filesGlob": "app/**/ts/**/*.ts",
  "atom": {
    "rewriteTsconfig": false
  }
}
